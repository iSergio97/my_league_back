<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sergiogd.my_league.repository.LeagueRepository">
    <resultMap id="leagueMap" type="com.sergiogd.my_league.model.League">
        <id column="ID" property="id" jdbcType="OTHER" javaType="java.util.UUID"/>
        <result column="NOMBRE" property="nombre" />
    </resultMap>

    <select id="getAllLeagues" resultMap="leagueMap">
        SELECT * FROM LEAGUE
    </select>
</mapper>
